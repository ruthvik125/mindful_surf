{
    "manifest_version": 2,
    "name": "Website Time Tracker",
    "version": "1.0",
    "description": "Track your time duration spent on individual websites.",
    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "images/16.png"
    },
    "icons": {
            "16": "images/16.png",
            "48": "images/48.png",
            "128": "images/128.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
